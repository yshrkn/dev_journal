---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION} maxWidth="narrow">
  <div class="hero-section">
    <div class="hero-content">
      <h1 class="hero-title">Dev Journal Blog</h1>
      <p class="hero-description">技術的な学びや体験を記録するブログです</p>
      <div class="hero-actions">
        <a href={`${import.meta.env.BASE_URL}/blog/`} class="cta-button primary">
          記事を読む
        </a>
        <a href={`${import.meta.env.BASE_URL}/tags/`} class="cta-button secondary">
          タグを見る
        </a>
      </div>
    </div>
  </div>

  <style>
    .hero-section {
      text-align: center;
      padding: 4rem 0;
      min-height: 60vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .hero-content {
      max-width: 600px;
      margin: 0 auto;
    }
    
    .hero-title {
      font-size: 3.5rem;
      font-weight: 800;
      margin: 0 0 1.5rem 0;
      background: linear-gradient(135deg, var(--accent), var(--accent-dark));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      line-height: 1.1;
    }
    
    .hero-description {
      font-size: 1.25rem;
      color: rgb(var(--text-secondary));
      margin: 0 0 3rem 0;
      line-height: 1.6;
    }
    
    .hero-actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }
    
    .cta-button {
      display: inline-flex;
      align-items: center;
      padding: 1rem 2rem;
      border-radius: var(--border-radius-lg);
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s ease;
      font-size: 1.125rem;
    }
    
    .cta-button.primary {
      background: var(--accent);
      color: white;
      box-shadow: var(--box-shadow-lg);
    }
    
    .cta-button.primary:hover {
      background: var(--accent-dark);
      transform: translateY(-2px);
      box-shadow: 0 10px 25px rgba(59, 130, 246, 0.4);
    }
    
    .cta-button.secondary {
      background: rgb(var(--surface));
      color: var(--accent);
      border: 2px solid var(--accent);
      box-shadow: var(--box-shadow);
    }
    
    .cta-button.secondary:hover {
      background: var(--accent);
      color: white;
      transform: translateY(-2px);
    }
    
    @media (max-width: 768px) {
      .hero-section {
        padding: 2rem 1rem;
        min-height: 50vh;
      }
      
      .hero-content {
        max-width: 100%;
        padding: 0 1rem;
      }
      
      .hero-title {
        font-size: 2.5rem;
      }
      
      .hero-description {
        font-size: 1.125rem;
        margin: 0 0 2rem 0;
      }
      
      .hero-actions {
        flex-direction: column;
        align-items: center;
        gap: 0.75rem;
        width: 100%;
      }
      
      .cta-button {
        width: 100%;
        max-width: 280px;
        justify-content: center;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
      }
    }
    
    @media (max-width: 480px) {
      .hero-section {
        padding: 1.5rem 0.75rem;
      }
      
      .hero-title {
        font-size: 1.75rem;
        margin: 0 0 1rem 0;
      }
      
      .hero-description {
        font-size: 0.95rem;
        margin: 0 0 1.5rem 0;
      }
      
      .cta-button {
        max-width: 250px;
        padding: 0.75rem 1.25rem;
        font-size: 0.95rem;
      }
    }
  </style>
</BaseLayout>
